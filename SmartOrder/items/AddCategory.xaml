<Window x:Class="SmartOrder.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Εισαγωγή κατηγορίας" SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        >
    <Grid Width="{DynamicResource DialogGridWidth}" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Name="lblCategory" Grid.Row="0" Grid.Column="0" Content="Όνομα : " />
        <TextBox Name="txtCategory" Grid.Row="0" Grid.Column="1"/>
        <WrapPanel Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="10">
            <Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="0,0,10,0" Content="_OK" />
            <Button IsCancel="True" MinWidth="60" Click="Button_Click"  Content="_Άκυρο" />
        </WrapPanel>
    </Grid>
</Window>
